<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:hint="Enter number between 1-6"
        app:dialogTitle="@string/boostTemperature"
        android:icon="@drawable/ic_whatshot_secondary_light_24dp"
        app:key="boostTemperature"
        app:title="@string/boostTemperature"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        app:dialogTitle="@string/minutes"
        app:key="boostDuration"
        android:icon="@drawable/ic_timer_primary_light_24dp"
        app:title="@string/boostDuration"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>